AC_ARCH(mu0)
{
  ac_mem      MEM:4096;  // data memory
  ac_reg      PC;        // program counter
  ac_reg      IR;        // instruction register
  ac_reg      ACC;       // accumulator
  ac_reg      CYC;       // cycle counter
  ac_wordsize 16;

  ARCH_CTOR(mu0) 
  {
    ac_isa("mu0_isa.ac");
    set_endian("big");
  };
};
